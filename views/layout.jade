doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/main.css')
  body
    script(src='//code.jquery.com/jquery.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
    nav.navbar.navbar-default( role="navigation" )
      .navbar-header
          button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href="/") HR Hub
   
      #navbar-inverse.collapse.navbar-collapse
          ul#nav-buttons.nav.navbar-nav
            li.active: a( href="/") Home
            li: a( href="#timesheet" ) Timesheet
            li.dropdown
              a.dropdown-toggle( href="#", data-toggle="dropdown", role="button", aria-expanded="false" ) Trip Tickets 
                  span.caret
              ul.dropdown-menu( role="menu" )
                    li: a( href="/trip" ) New Ticket
                    li: a( href="/action/tickets" ) View Tickets
                    li: a( href="#" ) Edit Tickets
                    li: a( href="#" ) Delete Tickets
            li: a( href="/directions" ) Directions
            li: a( href="/action/chat") Live Chat

          ul.nav.navbar-nav.navbar-right
            if (!user)
              li: a(href="/login") Login
              li: a(href="/register") Register
            if (user)
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button') #{user.username}
              li: a(href="/logout") Logout
              #hidden-username(data-val= '#{user.username}' hidden)
    header
          img.img-responsive(src='/images/smlheader.png', alt='Responsive image', id='head')
    .main-content.container-fluid
      block content
    footer
      img.img-responsive(src='/images/footer.png', alt='Responsive image')
      script(src='/javascripts/main.js')

    block scripts


