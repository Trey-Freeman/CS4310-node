doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src='http://code.jquery.com/jquery.js')
    script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
    nav.navbar.navbar-default( role="navigation" )
      .navbar-header
          button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href="/") HR Hub
   
      #navbar-inverse.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a( href="/") Home
            li: a( href="#timesheet" ) Timesheet
            li: a( href="/trip" ) Trip Tickets
            li: a( href="#dropdown" ) Directions
            li: a( href="/action/chat") Live Chat

          ul.nav.navbar-nav.navbar-right
            if (!user)
              li: a(href="/login") Login
              li: a(href="/register") Register
            if (user)
              li: p You are currently logged in as #{user.username}
              li: a(href="/logout") Logout
    .main-content.container-fluid
      block content
    footer
      p Footer Here
    block scripts


