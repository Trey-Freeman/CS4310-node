extends layout

block content
    link(rel='stylesheet', href='/stylesheets/pricing-table.css')

    // Header
    header#head
      .container
        .row
          h1.lead 
            b Welcome to Transport-Hub
          p.tagline
            | Manage your transportation costs
          
    // /Header
    // Intro
    .container.text-center
      br
      br
      h2.thin The best place to track your transportation costs
      p.text-muted
        | The difference between involvement and commitment is like an eggs-and-ham breakfast:
        br
        | 			the chicken was involved; the pig was committed.
    // /Intro
    // Highlights - jumbotron

    .jumbotron.top-space
      .container
        .package
          .name Basic
          .price €0
          .trial Totally free
          hr
          ul
            li Quotes
            li
              strong No
              |         Timesheet
            li
              strong No
              |         Trip tickets
            li Directions
            li Mailing list
