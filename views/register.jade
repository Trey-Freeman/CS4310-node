extends layout

block content
  h1 Register Page
  p.lead Say something worthwhile here.
  br
  form(role='form', action="/register",method="post", style='max-width: 300px;')
    .form-group
        input.form-control#username(type='text', name="username", placeholder='Enter Username' required)
    .form-group
      input.form-control#password(type='password', name="password", placeholder='Password' required)
    .form-group
      input.form-control#password-conf(type='password', name='password-conf', placeholder='Confirm Password' required)
    button.btn.btn-default#submit(type='submit') Submit
     &nbsp;
    a(href='/')
      button.btn.btn-primary(type="button") Cancel
block scripts
  script(type='text/javascript', src='../public/javascripts/register.js')