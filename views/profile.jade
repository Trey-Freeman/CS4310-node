extends layout

block content
      .row
        .col-sm-2.col-md-3
        .col-sm-2.col-md-2
          img.img-rounded.img-responsive(src='http://thetransformedmale.files.wordpress.com/2011/06/bruce-wayne-armani.jpg', alt='')
        .col-sm-2.col-md-4
          h1 User: #{user.username}

          form
            p
              label Email
              input#dirSource.form-control(type='text', value='')
            p
              label Password
              input#dirDestination.form-control(type='text', value='')
            a#getDirections(href='#getDirections' class="btn btn-success btn-block") Save
            a#paneReset(href='#reset' class="btn btn-danger btn-block") Cancel
          .col-sm-2.col-md-3