extends layout

block content
  .container
    header.page-header
      h1.page-title Your profile
    .col-md-4
      img.img-rounded.img-responsive(src='#{user.pic}', alt='')
    .col-md-2
    .col-md-6
      form(role='form', action="/action/profile", method="post", enctype="multipart/form-data")
        .form-group
          label Username
          input.username.form-control(type='text', name="username", value='#{user.username}', disabled='disabled')
        .form-group
          label Email
          input.email.form-control(type='text', name="email", value='#{user.email}')
        .form-group
          label Profile picture:
          input.file.form-control(type='file', name="image", value='#{user.pic}')
        .col-md-6
          a(href='/')
            button.btn.btn-default(type="button", class="btn btn-warning btn-block") Cancel
        .col-md-6
          button.btn.btn-primary(type='submit', class="btn btn-primary btn-block") Submit
          