extend layout

block content
	br
	.container
		.col-md-3
		.col-md-6
			h1 Create a new ticket

			form(role='form', action="/action/ticket",method="post")
				.form-group
					label Location: 
					input.form-control(type='text', name="location", placeholder='Location')
				.form-group
					label Distance:
					input.form-control(type='text', name="distance", placeholder='Distance')
				.col-md-6
					button.btn.btn-default.btn-block(type='button') Cancel
				.col-md-6
					button.btn.btn-primary.btn-block(type='submit') Submit
						a(href='/')
				
		.col-md-3

block scripts