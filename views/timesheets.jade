extend layout

block content
  link(type='text/css', rel='stylesheet')
  .container
    header.page-header
        h1.page-title Timesheets for #{user.username}
    
    if (!timesheets)
      h2 Sorry, no Timesheets found.
    else
      table#table.table.table-hover.table-mc-light-blue
        thead
          tr
            th #
            th Start Date
            th End Date
            th Hours
            th Rate
            th Comments
            th Edit
            th Remove
        tbody
          each sheet, i in timesheets
            tr(id='#{i}')
              td(data-title='#') #{i}
              td(data-title='startDate') #{sheet.startDate}
              td(data-title='endDate') #{sheet.endDate}
              td(data-title='hours') #{sheet.hours}
              td(data-title='rate') $#{sheet.rate}
              td(date-title='comments') #{sheet.comments}
              td(data-title='Edit', width='10%') 
                a(href='/timesheet/edit/#{sheet._id}?n=#{i}')
                  span.glyphicon.glyphicon-pencil(aria-hidden='true')
              td(data-title='Remove', width='10%')
                a(class='delete' data-row='#{i}' data-id='#{sheet.id}')
                  span.glyphicon.glyphicon-trash(aria-hidden='true')
      
      a(class="btn btn-primary", href="/timesheet") New timesheet

block scripts
  script(type='text/javascript', src='/javascripts/timesheets.js')
